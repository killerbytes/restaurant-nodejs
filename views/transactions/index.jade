extends ../layout

block content
  div.container
    div.d-flex
      h1.display-4 #{title}

    table.table
      tr
        th Name
        th Date
        th Cashier
        th Discount
        th Amount
        th Total
      each item in transactions
        tr
          td
            a(href=`/transactions/${item.id}`) #{item.cart.customer.name}
          td #{ locals.format(item.created_at, "YYYY-MM-DD h:mm:ss A")}
          td=item.user.username          
          td #{currency(item.discount).format()}
          td #{currency(item.total_price).format()}
          td #{currency(item.total_amount_due).format()}

      tr
        th
        th
        th Total
        th #{total.discount}
        th #{total.total_price}
        th #{total.total_amount_due}