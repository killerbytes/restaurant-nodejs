      .row
        nav.sidenav.col-md-2.bg-light
          div.sidebar
            include components/nav-admin.jade


        main.col-md-10.px-4.pt-3.ml-sm-auto 
          block content

    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.min.js")
