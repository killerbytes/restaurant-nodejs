doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/css/main.css')
  body
    header.navbar-dark.bg-dark
      nav.navbar
        a(class="navbar-brand" href="/") Credit
        div.collapse.navbar-collapse
          ul.navbar-nav
            li.nav-item
        form.form-inline
          if login
            a(href='/logout').nav-link Logout
          else
            a(href='/login').nav-link Login
